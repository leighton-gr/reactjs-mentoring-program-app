{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "baseUrl": "./",
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["src", "jest.setup.ts"],
  "exclude": ["./cypress.config.ts", "node_modules"]
}